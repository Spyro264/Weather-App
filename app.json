{
  "expo": {
    "name": "Weathe App",
    "slug": "Weather-App-Native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/sun.png",
    "scheme": "weatherappnative",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/sun.png",
        "backgroundColor": "#ffffff",
        "resizeMode": "contain"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/sun.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
